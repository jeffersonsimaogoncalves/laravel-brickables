{
    "name": "okipa/laravel-brickables",
    "description": "Page content bricks management made easy.",
    "keywords": [
        "okipa",
        "laravel",
        "php",
        "brickables",
        "bricks",
        "blocks",
        "content",
        "management",
        "admin",
        "display",
        "html"
    ],
    "homepage": "https://github.com/okipa/laravel-brickables",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Arthur LORENT",
            "email": "arthur.lorent@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.0",
        "spatie/eloquent-sortable": "^3.11"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "ext-json": "*",
        "phpstan/phpstan-mockery": "^0.12.14",
        "brianium/paratest": "^6.2",
        "nunomaduro/collision": "^5.3",
        "nunomaduro/larastan": "^0.7",
        "phpmd/phpmd": "^2.9",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Okipa\\LaravelBrickables\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Okipa\\LaravelBrickables\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcs": ["vendor/bin/phpcbf", "vendor/bin/phpcs"],
        "phpmd": "vendor/bin/phpmd config,src,tests text phpmd.xml",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=2G",
        "phpunit" : "vendor/bin/testbench package:test --parallel --no-coverage",
        "test": ["@phpcs", "@phpmd", "@phpstan", "@phpunit"]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Okipa\\LaravelBrickables\\BrickablesServiceProvider"
            ],
            "aliases": {
                "Brickables": "Okipa\\LaravelBrickables\\Facades\\Brickables"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
